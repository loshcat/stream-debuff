{
	"manifest_version": 2,
	"name": "Stream Restarter",
	"version": "1.1",

	"description": "Attempts to restart and fullscreen streams that stall.",

	"background": {
		"scripts": ["bg.js"],
		"persistent": false
	},

	"browser_action": {

	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"all_frames": true,
			"js": ["main.js"]
		}
	],

	"permissions": [
		"tabs",
		"contextMenus"
	]
}
